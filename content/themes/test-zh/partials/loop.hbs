{{! This is the post loop - each post will be output using this markup }}
<div class="article-wrap">
  <ul class = 'article-list'>

  {{#foreach posts}}
  {{!-- Add a `featured` class to the first post on each page, if it has an image and isn't already featured --}}
  <li class = '{{post_class}}'>

  <article class="{{post_class}} {{#if @first}}{{#if image}}{{#unless featured}}featured{{/unless}}{{/if}}{{/if}}">

      {{#if image}}
          <div class="image-holder">
              <a href="{{url}}" class="inner" style="background-image: url('{{image}}');">
                  <img src="/blog{{image}}">
              </a>
          </div>
      {{/if}}
      <div class="wrapper-info">
        <header>
            <h2 title = "{{title}}"><a href="{{url}}">{{title}}</a></h2>
        </header>

        <div class="text">
            <p title = "{{excerpt}}"><a href="{{url}}">{{excerpt}}...</a></p>
        </div>
      </div>
      <footer>
        <span class="time">{{date format='YYYY-MM-DD'}}</span>
        <span class="tags">{{tags}}</span>
      </footer>
  </article>

  </li>

  {{/foreach}}
  </ul>
  <script>
  [].slice.call(document.querySelectorAll('article > footer > span.tags')).forEach(function (item) {
    item.innerHTML = item.innerHTML.replace(/,?\s?<a href="\/tag\/index\/">首页展示<\/a>?/g, '');
  });
  </script>
</div>


{{! Previous/next page links - displayed on every page }}
{{pagination}}
